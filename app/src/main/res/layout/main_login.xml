<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- 測試用登入-->
    <Button
        android:id="@+id/btTestAdmin"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="goToAdmin"
        android:text="admin頁面" />

    <Button
        android:id="@+id/btTestWaiter"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="goToWaiter"
        android:text="Waiter頁面" />

    <Button
        android:id="@+id/btTestUser"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="goToUser"
        android:text="User頁面" />
    <!-- End-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="12dp"
                android:text="會員登入"
                android:textSize="20sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tiAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvLogin"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp">

                <EditText
                    android:id="@+id/etAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvLogin"
                    android:hint="請輸入帳號"
                    android:inputType="phone" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tiPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tiAccount"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="請輸入密碼"
                    android:inputType="textPassword" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tiPassword"
                android:layout_below="@+id/tiPassword"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/tvLoginButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="btLoginOnClick"
                    android:clickable="true"
                    android:text="登入" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:onClick="btRegisterOnclick"
                    android:text="註冊" />
            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>









