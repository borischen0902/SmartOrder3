<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrRamen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtRamenTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="100dp"
            android:paddingStart="100dp"
            android:text="開始客製化您的拉麵"
            android:textSize="20sp" />

        <!--拉麵照片-->
        <ImageView
            android:id="@+id/ivRamenPhoto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/ramen"
            app:layout_constraintTop_toBottomOf="@+id/txtRamenTitle" />

        <TextView
            android:id="@+id/txtRamenPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拉麵360元"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivRamenPhoto" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/conDashiCustomized"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtRamenPrice">


            <!--濃淡選項-->
            <TextView
                android:id="@+id/txtDashi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="濃淡"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <RadioGroup
                android:id="@+id/rdgDashi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/txtDashi">

                <RadioButton
                    android:id="@+id/btnDashiLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:text="淡"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/txtDashi"

                    />

                <RadioButton
                    android:id="@+id/btnDashiMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:text="中"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnDashiLight"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioButton
                    android:id="@+id/btnDashiStrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="濃"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnDashiMedium"
                    app:layout_constraintTop_toTopOf="parent"

                    />

            </RadioGroup>


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/conRichnessCustomized"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/conDashiCustomized">


            <!--油量選項-->
            <TextView
                android:id="@+id/txtRichness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="油量"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rdgRichness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/txtRichness">

                <RadioButton
                    android:id="@+id/btnRichnessLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:text="淡"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/txtRichness" />

                <RadioButton
                    android:id="@+id/btnRichnessMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:text="中"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/btnRichnessLight" />

                <RadioButton
                    android:id="@+id/btnRichnessStrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:text="濃"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/btnRichnessMedium" />

            </RadioGroup>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/conGarlicCustomized"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/conRichnessCustomized">


            <!--蒜量選項-->
            <TextView
                android:id="@+id/txtGarlic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蒜量"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rdgGarlic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/txtGarlic">

                <RadioButton
                    android:id="@+id/btnGarlicLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:text="淡"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/txtGarlic" />

                <RadioButton
                    android:id="@+id/btnGarlicMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:text="中"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/btnGarlicLight" />

                <RadioButton
                    android:id="@+id/btnGarlicStrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:text="濃"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/btnGarlicMedium" />

            </RadioGroup>

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/conSpicyCustomized"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/conGarlicCustomized">


            <!--辣度選項-->
            <TextView
                android:id="@+id/txtSpicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="辣度"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rdgSpicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/txtSpicy">

                <RadioButton
                    android:id="@+id/btnSpicyLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="40dp"
                    android:text="小辣"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/txtSpicy" />

                <RadioButton
                    android:id="@+id/btnSpicyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="中辣"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/btnSpicyLight" />

                <RadioButton
                    android:id="@+id/btnSpicyStrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:text="大辣"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/btnSpicyMedium" />

            </RadioGroup>


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/conTextureCustomized"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/conSpicyCustomized">


            <TextView
                android:id="@+id/txtTexture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="硬度"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/rdgTexture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/txtTexture">

                <RadioButton
                    android:id="@+id/btnTextureSoft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:text="軟"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/txtTexture" />

                <RadioButton
                    android:id="@+id/btnTextureMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="普通"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/btnTextureSoft" />

                <RadioButton
                    android:id="@+id/btnTextureFirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:text="硬"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/btnTextureMedium" />

            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/conTextureCustomized"
                android:text=" 確定"
                android:id="@+id/btnRamenConfirm"/>


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</ScrollView>





