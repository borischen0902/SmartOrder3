<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvCoupon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llContext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivCoupon"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/info1" />

                <TextView
                    android:id="@+id/tvCouponTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/ivCoupon"
                    android:layout_below="@id/ivCoupon"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:text="八月優惠!" />

                <TextView
                    android:id="@+id/tvMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/ivCoupon"
                    android:layout_below="@id/ivCoupon"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:text="more..." />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llExtend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:background="#dddddd" />


                <TextView
                    android:id="@+id/tvCouponInfoDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:text="八月優惠! 歡慶父親節, 消費現折8.8折!" />

                <TextView
                    android:id="@+id/tvCouponQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCouponInfoDetail"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="12dp"
                    android:text="剩餘 10 張" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCouponQty"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btCouponReceive"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="領取優惠券" />

                    <Button
                        android:id="@+id/btCouponShare"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="與好友分享資訊" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>