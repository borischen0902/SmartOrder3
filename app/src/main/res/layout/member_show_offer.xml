<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvofferCoupon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llofferContext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivofferCoupon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@color/colorwhite" />



            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llofferExtend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvofferCouponTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/colorPrimary"
                    android:text="八月優惠!" />


                <TextView
                    android:id="@+id/tvofferCouponInfoDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="6dp"
                    android:textSize="14sp"
                    android:text="八月優惠! 歡慶父親節, 消費現折8.8折!" />

                <TextView
                    android:id="@+id/tvofferCouponQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvofferCouponInfoDetail"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="6dp"
                    android:text="剩餘 10 張" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvofferCouponQty"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="6dp">

                    <Button
                        android:id="@+id/btofferCouponuse"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="使用" />

                    <Button
                        android:id="@+id/btofferCouponShare"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="分享" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>