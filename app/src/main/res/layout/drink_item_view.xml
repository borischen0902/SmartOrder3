<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/conMenuDrink"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/ivDrinkPhoto"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/matcha" />

        <TextView
            android:id="@+id/txtDrinkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="抹茶"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivDrinkPhoto" />

        <TextView
            android:id="@+id/txtDrinkPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="70元"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnDrinkButton"
            app:layout_constraintStart_toEndOf="@+id/txtDrinkName"
            app:layout_constraintTop_toBottomOf="@+id/ivDrinkPhoto" />

        <CheckBox
            android:id="@+id/btnDrinkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="選購"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivDrinkPhoto"
            app:layout_constraintEnd_toEndOf="parent" />



    </android.support.constraint.ConstraintLayout>

